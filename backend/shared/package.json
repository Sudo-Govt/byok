{
  "name": "byok-backend-shared",
  "version": "1.0.0",
  "description": "Shared utilities and middleware for BYOK backend services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "winston": "^3.10.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "bull": "^4.11.3",
    "rate-limiter-flexible": "^3.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "rimraf": "^5.0.1"
  },
  "keywords": [
    "backend",
    "utilities",
    "middleware",
    "typescript",
    "node.js"
  ],
  "author": "BYOK Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sudo-Govt/byok"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}